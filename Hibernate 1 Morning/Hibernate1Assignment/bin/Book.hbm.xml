<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.accolite.assignment.Book" table ="Book">
   <id name="id" type="int" column="Id">
     <generator class="native"></generator>
   </id>
   
   <property name="title" column="title" type="string"/>
   <property name="language" column="language" type="string"/>
   <property name="authorName" column="authorName" type="string"/>
   <property name="price" column="price" type="int"></property>
   </class>
</hibernate-mapping>